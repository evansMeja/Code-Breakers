class Solver:
    def __init__(self):
        self.stack = []
        
    def reverseB(self,i):
        if i == ")":
            return "("
        
    def insert(self,brace):
        if brace["type"] == "opening":
            self.stack = self.stack + [brace]
            return True
        else:
            if len(self.stack) == 0:
                return False
            else:
                if self.stack[-1]["string"] == self.reverseB(brace["string"]):
                    self.stack = self.stack[:-1]
                    return True
                else:
                    return False
    def create_dict(self,i):
        if i == "(":
            return {"type":"opening","string":i}
        if i == ")":
            return {"type":"closing","string":i}
        
    def is_empty(self,):
        return len(self.stack) == 0

class ParenthesisValidator:
    def isValid(self, s: str) -> bool:
        sol = Solver()
        for i in s:
            solDict = sol.create_dict(i)
            res = sol.insert(solDict)
            if res == False:
                return False
        return sol.is_empty()


class Solution:
    def longestValidParentheses(self, s: str) -> int:
        p = ParenthesisValidator()
        lg=0
        for i in range(0,len(s)):
            testParenthesis = s[i:]
            c = 0
            test2 = ''
            for x in testParenthesis:
                test2 = test2 + x
                if p.isValid(test2):
                    length = len(test2)
                    if length > lg:
                        lg = length
                c = c + 1
        return lg
